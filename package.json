{
  "name": "synect",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev:frontend": "bun --cwd apps/frontend run dev",
    "dev:backend": "bun --cwd apps/backend run start:dev",
    "build": "bun --cwd apps/backend run build && bun --cwd apps/frontend run build",
    "lint": "bun --cwd apps/backend run lint && bun --cwd apps/frontend run lint",
    "test": "bun --cwd apps/backend run test",
    "test:e2e": "bun --cwd apps/backend run test:e2e"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "typescript": "^5.7.3"
  }
}
