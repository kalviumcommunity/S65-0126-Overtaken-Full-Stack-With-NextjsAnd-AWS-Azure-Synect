# Database connection URL
DATABASE_URL="postgresql://synect_user:synect_password@localhost:5432/synect_db?schema=public"

# Cloud database (AWS RDS example)
DATABASE_URL_RDS="postgresql://db_user:db_password@your-rds-endpoint:5432/synect_db?schema=public&sslmode=require"

# API runtime
PORT=3001
NODE_ENV="development"
FORCE_HTTPS="false"
CORS_ORIGIN="http://localhost:3000"

# Auth
JWT_SECRET="replace-with-a-strong-secret"
JWT_EXPIRES_IN="15m"
JWT_ISSUER="synect-api"
JWT_AUDIENCE="synect-client"

# Redis cache
REDIS_URL="redis://localhost:6379"
REDIS_TTL_SECONDS=120

# AWS S3 upload
AWS_REGION="ap-south-1"
AWS_ACCESS_KEY_ID="your-access-key-id"
AWS_SECRET_ACCESS_KEY="your-secret-access-key"
AWS_S3_BUCKET="synect-uploads"

# AWS SES email
AWS_SES_FROM_EMAIL="no-reply@synect.dev"
